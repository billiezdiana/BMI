    <!-- jQuery -->
    <script src="~/css/plugins/jquery/jquery.min.js"></script>
    <script src="~/css/plugins/jquery-validation/jquery.validate.min.js"></script>

    <!-- this below is my function script -->
    <script asp-append-version="true" src="~/css/js/script.js"></script>
    <!-- sweetalert -->
    <script src="~/css/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- toastr -->
    <script src="~/css/plugins/toastr/toastr.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/css/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/css/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/css/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/css/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/css/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/css/dist/js/demo.js"></script>

    <script>
        $(function () {
            var msg = '@TempData["msg"]';
            var result = '@TempData["result"]';
            if (result == 'success')
                toastr.success("", msg);
            else if (result == 'failed')
                toastr.error("", msg);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
