@model IEnumerable<BMI.Models.RepackModel>
@{
    ViewData["Title"] = "Repack";
}
<div class="content-wrapper">
    <section class="content-header">
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            @if (Model.Count() > 0)
                            {
                                <form method="get" asp-action="Daily" asp-controller="Production">
                                    <div class="input-group input-group-sm">
                                        <input type="date" asp-for="First().date">
                                        <span class="input-group-append">
                                            <button type="submit" value="Create" class="btn btn-primary">Go!</button>
                                        </span>
                                        <span asp-validation-for="First().date" class="text-danger" style="font-size:smaller"></span>
                                    </div>
                                </form>
                            }
                            </div>
                    </div>
                </div>

                <div class="card">

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped table-sm">
                            <thead>
                                <tr>
                                    <th colspan="1">

                                    </th>
                                    <th colspan="4" style="text-align:center">
                                        From
                                    </th>
                                    <th colspan="4" style="text-align:center">
                                        To
                                    </th>
                                </tr>      
                                <tr>
                                    <th style="width: 4%">
                                        PO
                                    </th>
                                    <th style="width: 1%">
                                        PT
                                    </th>
                                    <th style="width: 4%">
                                        Item
                                    </th>
                                    <th style="width: 10%">
                                        Description
                                    </th>
                                    <th style="width: 3%">
                                        Qty
                                    </th>
                                    <th style="width: 1%">
                                        PT
                                    </th>
                                    <th style="width: 4%">
                                        Item
                                    </th>
                                    <th style="width: 10%">
                                        Description
                                    </th>
                                    <th style="width: 3%">
                                        Qty
                                    </th>
                                </tr>
                            </thead>
                            @if (Model.Count() > 0)
                            {
                                <tbody>
                                    @foreach (var obj in Model)
                                    {

                                    <tr>
                                        <td style="font-size:smaller">@obj.po</td>
                                        <td style="font-size:smaller">@obj.fromPTModel.pt</td>
                                        <td style="font-size:smaller">@obj.fromMasterBMIModel.sap_code</td>
                                        <td style="font-size:smaller">@obj.fromMasterBMIModel.description</td>
                                        <td style="font-size:smaller">@obj.qty</td>
                                        <td style="font-size:smaller">@obj.toPTModel.pt</td>
                                        <td style="font-size:smaller">@obj.toMasterBMIModel.sap_code</td>
                                        <td style="font-size:smaller">@obj.toMasterBMIModel.description</td>
                                        <td style="font-size:smaller">@obj.qty</td>
                                    </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}